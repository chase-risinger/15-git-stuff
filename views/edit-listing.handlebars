<p>This is the edit listing page</p>
<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Listing
  </h2>
  <form class="edit-listing-form">
    <div>
      <label for="listing-title">Title</label>
      <input id="listing-title" name="listing-title" type="text" value="{{listing.title}}" />
      <label for="listing-price">Price</label>
      <input id="listing-price" name="listing-price" type="number" value="{{listing.price}}" />
      <label for="listing-description">Description:</label>
      <textarea id="listing-description" name="listing-description">{{listing.description}}</textarea>
    </div>

    <button type="submit">Save listing</button>
    <button type="button" class="delete-listing-btn">Delete listing</button>
  </form>
</article>

<script src="/javascript/edit-listing.js"></script>
<script src="/javascript/delete-listing.js"></script>